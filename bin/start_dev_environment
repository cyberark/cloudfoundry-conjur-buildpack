#!/bin/bash -e

cd "$(dirname "$0")"
# shellcheck disable=SC1091
. ./utils
trap finish EXIT

build_test_images
start_conjur

# Runs the cflinux3 image in interactive mode with the project files mounted
docker-compose run --rm \
  -e BUILDPACK_BUILD_DIR="/cyberark/cloudfoundry-conjur-buildpack/conjur_buildpack" \
  tester bash
